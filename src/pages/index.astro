---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import me from '../assets/me.jpeg'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['English', 'Turkish', 'Bulgarian']
const frontend = ['React JS', 'React Native', 'JavaScript', 'Axios', 'JEST', 'Zustand', 'Git', 'Node,js', 'NPM', 'Yarn']
const backend = ['CRUD API']
const others = ['iTerm2', 'zsh']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={me}
				alt='profile photo'
				class='h-32 w-auto rounded-full bg-[#5D3FD3] p-1'
				loading='eager'
			/>

			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Aykut Kobak</h1>

				<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
					<Label title='MillSaps'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Varna, Bulgaria'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/example/'
						target='_blank'
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				Oh, hey there, welcome! I'm Front End Developer and UI Designer; creating modern, stylish and human-oriented UIs.
			</p>
		</Section>
		{
			allPostsByDate.length > 0 && (
				<Section title='Posts'>
					<ul class='flex flex-col gap-y-2'>
						{allPostsByDate.map((p) => (
							<li class='flex flex-col gap-x-2 sm:flex-row'>
								<PostPreview post={p} />
							</li>
						))}
					</ul>
				</Section>
			)
		}

		<Section title='Experience'>
			<a href='https://millsaps.eu' target="_blank">
				<Card
				heading='Co-Founder'
				subheading='MillSaps'
				date='February 2023 - Current'
				imagePath='/src/assets/millsaps.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16 rounded-md'
				>
					<p class='list-disc text-muted-foreground'>
						Our aim is to meet the demands of people, to make applications and sites that will be useful for daily life or work.
					</p>
				</Card>
			</a>
			<a href="https://millsaps.eu" target="_blank">
				<Card
					heading='Software Engineer'
					subheading='MillSaps'
					date='Feb 2023 - Current'
					imagePath='/src/assets/millsaps.png'
					altText='Lorem, ipsum dolor sit'
					imageClass='h-12 w-auto md:-left-16 rounded-md'
				>
					<p class='list-disc text-muted-foreground'>
						As a dedicated Software Engineer at MillSaps, I develop responsive web applications using ReactJS and high-performance mobile applications with React Native, ensuring seamless user experiences and robust API integrations.
					</p>
				</Card>
			</a>
			<a href="https://millsaps.eu" target="_blank">
				<Card
					heading='Chief Technology Officer'
					subheading='MillSaps'
					date='Feb 2023 - Current'
					imagePath='/src/assets/millsaps.png'
					altText='Lorem, ipsum dolor sit'
					imageClass='h-12 w-auto md:-left-16 rounded-md'
				>
					<p class='list-disc text-muted-foreground'>
						As the Chief Technology Officer at MillSaps, I lead our technical vision and strategy, guiding the development and deployment of innovative software solutions that deliver value to our clients. My role encompasses a wide range of responsibilities, including strategic planning, technology leadership, and cross-functional collaboration. With a passion for technology and a commitment to excellence, I oversee all aspects of our technology operations, from product development and engineering to IT infrastructure and security.
					</p>
				</Card>
			</a>
			<a href="https://millsaps.eu" target="_blank">
				<Card
					heading='Lead User Interface Designer'
					subheading='MillSaps'
					date='Feb 2023 - Current'
					imagePath='/src/assets/millsaps.png'
					altText='Lorem, ipsum dolor sit'
					imageClass='h-12 w-auto md:-left-16 rounded-md'
				>
					<p class='list-disc text-muted-foreground'>
						As the Lead User Interface Designer at MillSaps, I direct a team in creating intuitive, user-friendly interfaces through comprehensive user research, prototyping, and visual design, ensuring consistency and excellence across all products. I collaborate closely with stakeholders and manage multiple projects, integrating the latest design trends to enhance user experience.
					</p>
				</Card>
			</a>
			<a href="https://www.linkedin.com/company/ailamatch/about/" target="_blank">
				<Card
					heading='Front End Engineer'
					subheading='AILA'
					date='Sep 2022 - Sep 2023'
					imagePath='/src/assets/aila.png'
					altText='Lorem, ipsum dolor sit'
					imageClass='h-12 w-auto md:-left-16 rounded-md'
				>
					<p class='list-disc text-muted-foreground'>
						At AILA, I contributed to the development of cutting-edge web applications using technologies like Next.js, Node.js, and styled-components, ensuring robust and scalable solutions. By leveraging design thinking and usability testing, I enhanced user experiences and maintained high code quality through effective use of Git and adherence to style guides.
					</p>
				</Card>
			</a>
			<Card
				heading='CNC Technician'
				subheading='3D CNC'
				date='Jul 2021 - Aug 2021'
				altText='Lorem, ipsum dolor sit'
			>
				<p class='list-disc text-muted-foreground'>
					I was responsible for running machines in proper process, and maintaining CNC machines. Also, managed molding machine.	
				</p>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Anadolu University'
				subheading='A.A. - Social Media Management'
				date='Sep 2022 - Aug 2024'
				altText='Lorem, ipsum dolor sit'
			>
				<p class='list-disc text-muted-foreground'>
					GPA: --/4	
				</p>
			</Card>
			<Card
				heading='Ahi Evran Vocational and Technical High School'
				subheading='Industrial Automation Technologies'
				date='Sep 2018 - Jun 2022'
				altText='Lorem, ipsum dolor sit'
			>
				<ul class='list-disc text-muted-foreground'>
					GPA: 81,22/100
				</ul>
			</Card>
		</Section>

		<Section title='Portfolio'>
			<div class='flex flex-auto flex-wrap flex-row w-full gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-3'>
				<ProjectCard
					href='https://viddle.millsaps.eu'
					heading='VIDDLE'
					subheading='The new way of discovering movies and series. VIDDLE helps users to being able to find desired content instantaneously. With simple search engine and filtratization options, VIDDLE doubtless best app for whom wants get learnt about their desired movie or serie.'
					imagePath='/src/assets/viddle.jpg'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://www.figma.com/design/7SaSurb8Ctt2wuh8jEBaoJ/PROJECT-CENTURY?t=pcJ9BNV6kCbewzdI-1'
					heading='Project Century'
					subheading='Just only concept design. Made by me. The main purpose of this design is enable more user friendly film watching experience.'
					imagePath='/src/assets/cf.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://www.figma.com/design/DUrhV3toeIjqRZeT2PoB0A/The-NorthTV?t=pcJ9BNV6kCbewzdI-1'
					heading='The North TV'
					subheading='Just only concept design. Made by me. The main purpose of this design is better online TV experience. Also, more likewise TV display.'
					imagePath='/src/assets/ntv.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://www.figma.com/design/jzF0DB1RrPMVbWRvXzMXRI/Dynamic-Island-Designs?t=pcJ9BNV6kCbewzdI-1'
					heading='iOS Dynamic Stripe'
					subheading='Just only concept design. Made by me. I saw that Apple does not any work on a Dynamic Island alternative for older models, so I designed Dynamic Stripe.'
					imagePath='/src/assets/ds.jpg'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					href='https://www.figma.com/design/nuHzaZvM65Ox3sxX2sgm0z/FACEBOOK-LOGIN-PAGE-REDESIGN?t=M3Ux7DKoKlzUEKMe-1'
					heading='Facebook Login Redesign'
					subheading='An redesign case study, Facebooks login page seems old, postmodern, and unattractive. I made a redesign, if Facebook like they can contact me :)'
					imagePath='/src/assets/fb.jpg'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Certifications'>
			<Card
				as='a'
				heading='Git and GitHub'
				date='Aug 2022'
				imagePath='/src/assets/linkedin.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
				href='https://www.linkedin.com/learning/certificates/2dd44c216d3476ab8b08b389dfabbd566e6282b1d51b5d2bda6f335e08437121?lipi'
			/>
			<Card
				as='a'
				heading='PCAP - Programmig Essentials in Python'
				date='Jun 2020'
				imagePath='/src/assets/c.jpg'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16 rounded-md'
				href='https://aykutkorkmaz1.github.io/assets/AYKUTKORKMAZ-MEB-Akilli-Tekno-certificate.pdf'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
</PageLayout>
